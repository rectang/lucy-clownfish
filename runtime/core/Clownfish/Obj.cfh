parcel Clownfish;

/** Base class for all objects.
 */

public abstract class Clownfish::Obj {

    Class *klass;

    /** Abstract initializer.
     */
    public inert Obj*
    init(Obj* self);

    /** Get a host-language object wrapper for this object.
     *
     * @return a host object which wraps this Clownfish object
     */
    void*
    To_Host(Obj *self);

    /** Create a clone of the object.
     *
     * @return an equivalent object
     */
    public abstract incremented Obj*
    Clone(Obj *self);

    /** Indicate whether two objects are the same.  By default, compares the
     * memory address.
     *
     * @param other Another Obj.
     * @return true if they are the same
     */
    public bool
    Equals(Obj *self, Obj *other);

    /** Indicate whether one object is less than, equal to, or greater than
     * another.
     *
     * @param other Another Obj.
     * @return 0 if the objects are equal, a negative number if
     * `self` is less than `other`, and a positive
     * number if `self` is greater than `other`.
     */
    public abstract int32_t
    Compare_To(Obj *self, Obj *other);

    /** Generic destructor.  Frees the struct itself but not any complex
     * member elements.
     */
    public void
    Destroy(Obj *self);

    /** Obtain the object's Class.
     *
     * @return a Class object
     */
    public inert Class*
    get_class(Obj *self);

    /** Get the name of the class that the object belongs to.
     *
     * @return a class name
     */
    public inert String*
    get_class_name(Obj *self);

    /** Indicate whether the object is a descendent of `ancestor`.
     *
     * @param ancestor a Class to test against
     * @return true if the object descends from `ancestor`
     */
    public inert bool
    is_a(nullable Obj *self, nullable Class *ancestor);

    /** Provide a stringified representation of the object.  The default
     * implementation yields "ClassName@hex_mem_address".
     *
     * @return a String representation of the object
     */
    public incremented String*
    To_String(Obj *self);
}

